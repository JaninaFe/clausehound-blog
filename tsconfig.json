{
  "include": ["src/"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "lib": ["ES2018", "DOM"],
    "module": "esNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  }
}
